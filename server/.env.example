# W&B API Key for Weave tracing and Inference
# Get your key at https://wandb.ai/settings
WANDB_API_KEY=your_wandb_api_key_here

# Server configuration
PORT=3001
HOST=127.0.0.1
NODE_ENV=development

# W&B Project configuration
WANDB_PROJECT=fractal

# Eval policy memory persistence
POLICY_MEMORY_PATH=./data/policy-memory.json

# Session token guardrails
MAX_TOKENS_PER_SESSION=40000
TOKEN_WARNING_THRESHOLD=0.8

# API boundary controls
# Set to true in production and provide SERVER_API_KEY.
REQUIRE_API_KEY=false
SERVER_API_KEY=
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=120

# Comma-separated allowed origins. In development, localhost origins are allowed automatically.
# Example: CORS_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com
CORS_ALLOWED_ORIGINS=
